{
  "name": "apire-ai-security-platform",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "apire-prompt-shield/backend",
    "apire-prompt-shield/frontend",
    "apire-redteam-kit/backend",
    "apire-redteam-kit/frontend",
    "apire-compliance-checker/backend",
    "apire-compliance-checker/frontend"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "perf:k6": "k6 run tests/perf/k6-login-and-scan.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
